    end;
  end;
end;

procedure TfrmMain.btnSearchClick(Sender: TObject);
var
  isPressedOK: boolean;
begin
  workerIDLog := string.Empty;
  isPressedOK := InputQuery('Идентификация на служител', 'ID на служител:', workerIDLog);

